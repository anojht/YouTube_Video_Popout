{
  "manifest_version": 2,

  "name": "Video Popout",
  "description": "This extension allows you to pop out a YouTube video.",
  "version": "1.0",

  "background": {
    "scripts": [ "background.js" ],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "https://ajax.googleapis.com/",
    "https://www.youtube.com/*"
  ]
}
